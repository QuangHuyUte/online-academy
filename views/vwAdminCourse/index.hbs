<div class="row">
  <div class="col-3">
    {{> sidebar}}
  </div>

  <div class="col-9">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h3>Courses Management</h3>
      <form class="d-flex" method="get">
        <input name="q" class="form-control me-2" value="{{q}}" placeholder="Search title...">
        <button class="btn btn-outline-primary">Search</button>
      </form>
    </div>

    <table class="table table-hover align-middle">
      <thead class="table-light">
        <tr>
          <th>#</th><th>Title</th><th>Category</th><th>Instructor</th><th>Price</th><th>Status</th><th>Action</th>
        </tr>
      </thead>
      <tbody>
        {{#each courses}}
        <tr>
          <td>{{addOne @index}}</td>
          <td>{{this.title}}</td>
          <td>{{this.cat_name}}</td>
          <td>{{this.ins_name}}</td>
          <td>${{this.price}}</td>
          <td>
            {{#if this.is_completed}}âœ… Completed{{else}}ðŸ•“ Draft{{/if}}
            {{#if this.is_hidden}}<span class="badge bg-secondary ms-1">Hidden</span>{{/if}}
          </td>
          <td>
            {{#if this.is_hidden}}
              <form action="/admin/courses/{{this.id}}/unhide" method="post" class="d-inline">
                <button class="btn btn-sm btn-success">Unhide</button>
              </form>
            {{else}}
              <form action="/admin/courses/{{this.id}}/hide" method="post" class="d-inline">
                <button class="btn btn-sm btn-warning">Hide</button>
              </form>
            {{/if}}
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>

    {{> pagination pagination}}
  </div>
</div>
