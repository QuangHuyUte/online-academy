<div class="row page-enter">
  <div class="col-3">
    {{> sidebar}}
  </div>

  <div class="col-9">
    <!-- ======= HEADER ======= -->
    <div class="card border-0 shadow-sm mb-3 header-enter">
      <div class="card-body">
        <div class="d-flex flex-wrap justify-content-between align-items-end gap-3">
          <div>
            <nav class="small text-muted d-flex align-items-center gap-2 mb-1">
              <i class="bi bi-house-door"></i>
              <a class="text-decoration-none" href="/admin">Admin</a>
              <span>/</span>
              <span class="fw-semibold">Courses</span>
            </nav>
            <h3 class="mb-0 fw-bold d-flex align-items-center gap-2">
              <span class="brand-dot"></span> Courses Management
            </h3>
          </div>

          <!-- Search + Filters -->
          <form class="d-flex flex-wrap gap-2 align-items-center" method="get" action="/admin/courses">
            <div class="input-group">
              <span class="input-group-text"><i class="bi bi-search"></i></span>
              <input name="q" class="form-control" value="{{q}}" placeholder="Search titleâ€¦">
            </div>

            <select name="cat_id" class="form-select" style="min-width:220px" data-bs-toggle="tooltip" data-bs-title="Filter by category">
              <option value="">All categories</option>
              {{#each categories}}
                <option value="{{this.id}}" {{isSelected this.id ../selectedCatId}}>
                  {{#if this.parent_name}}{{this.parent_name}} / {{/if}}{{this.name}}
                </option>
              {{/each}}
            </select>

            <select name="instructor_id" class="form-select" style="min-width:220px" data-bs-toggle="tooltip" data-bs-title="Filter by instructor">
              <option value="">All instructors</option>
              {{#each instructors}}
                <option value="{{this.id}}" {{isSelected this.id ../selectedInstructorId}}>
                  {{this.name}}
                </option>
              {{/each}}
            </select>

            <div class="form-check ms-2">
              <input class="form-check-input" type="checkbox" value="1" id="showRemoved" name="showRemoved" {{isChecked showRemoved}}>
              <label class="form-check-label small" for="showRemoved">Show hidden</label>
            </div>

            <button class="btn btn-primary btn-glow ms-2">
              <i class="bi bi-funnel me-1"></i> Apply
            </button>
          </form>
        </div>
      </div>
    </div>

    {{> flash}}

    {{#if courses.length}}
      <div class="table-responsive card border-0 shadow-sm table-enter">
        <table class="table table-hover align-middle mb-0">
          <thead class="table-light sticky-top z-1">
            <tr>
              <th style="width:74px">#</th>
              <th style="min-width:260px">Title</th>
              <th style="min-width:180px">Category</th>
              <th style="min-width:200px">Instructor</th>
              <th style="min-width:160px">Price</th>
              <th style="min-width:150px">Status</th>
              <th style="min-width:160px">Updated</th>
              <th style="min-width:100px">Views</th>
              <th class="text-end" style="width:160px">Action</th>
            </tr>
          </thead>
          <tbody>
            {{#each courses}}
            <tr class="row-enter">
              <td>{{inc (add ../offset @index)}}</td>
              <td class="text-truncate" style="max-width: 360px;" title="{{this.title}}">
                <strong>{{this.title}}</strong>
              </td>
              <td>{{#if this.category}}{{this.category}}{{else}}â€”{{/if}}</td>
              <td>{{#if this.instructor}}{{this.instructor}}{{else}}â€”{{/if}}</td>
              <td>
                {{#if this.promo_price}}
                  <span class="text-decoration-line-through me-1">
                    {{formatCurrency this.price currency='USD' locale='en-US'}}
                  </span>
                  <strong>{{formatCurrency this.promo_price currency='USD' locale='en-US'}}</strong>
                {{else}}
                  {{#if this.price}}
                    {{formatCurrency this.price currency='USD' locale='en-US'}}
                  {{else}}â€”{{/if}}
                {{/if}}
              </td>
              <td>
                {{#if this.is_completed}}âœ… Completed{{else}}ðŸ•“ Draft{{/if}}
                {{#if this.is_removed}}<span class="badge bg-secondary ms-1">Hidden</span>{{/if}}
              </td>
              <td class="text-muted small">
                {{#if this.last_updated_at}}{{dateVN this.last_updated_at}}{{else}}â€”{{/if}}
              </td>
              <td class="text-muted">{{#if this.view_count}}{{this.view_count}}{{else}}â€”{{/if}}</td>
              <td class="text-end">
        <form action="/admin/courses/{{this.id}}/remove" method="post" class="d-inline"
          onsubmit="return confirm('Are you sure you want to {{#if this.is_removed}}unhide{{else}}hide{{/if}} this course?');">
                  <!-- giá»¯ láº¡i filter Ä‘á»ƒ quay vá» Ä‘Ãºng -->
                  <input type="hidden" name="q" value="{{../q}}">
                  <input type="hidden" name="page" value="{{../page}}">
                  <input type="hidden" name="cat_id" value="{{../catQS}}">
                  <input type="hidden" name="instructor_id" value="{{../insQS}}">
                  <input type="hidden" name="showRemoved" value="{{../srQS}}">


                  <button class="btn btn-sm {{#if this.is_removed}}btn-success{{else}}btn-warning{{/if}}">
                    {{#if this.is_removed}}Unhide{{else}}Hide{{/if}}
                  </button>
                </form>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      {{#with (buildPagination
          page
          totalPages
          (concat
            "/admin/courses?" 
            "q=" (encodeURIComponent q)
            "&cat_id=" (encodeURIComponent catQS)
            "&instructor_id=" (encodeURIComponent insQS)
            "&showRemoved=" (encodeURIComponent srQS)
          )
        ) as |p|}}

        <nav class="mt-2">
          <ul class="pagination">
            {{#if p.hasPrev}}<li class="page-item"><a class="page-link" href="{{p.prevUrl}}">Prev</a></li>{{/if}}
            {{#each p.pages}}
              <li class="page-item {{#if this.active}}active{{/if}}">
                <a class="page-link" href="{{this.url}}">{{this.page}}</a>
              </li>
            {{/each}}
            {{#if p.hasNext}}<li class="page-item"><a class="page-link" href="{{p.nextUrl}}">Next</a></li>{{/if}}
          </ul>
        </nav>
      {{/with}}

    {{else}}
      <div class="card border-0 shadow-sm empty-enter">
        <div class="card-body d-flex justify-content-between align-items-center">
          <div class="d-flex align-items-center gap-2">
            <i class="bi bi-collection text-muted fs-4"></i>
            <div>No courses available.</div>
          </div>
          <a class="btn btn-outline-primary" href="/admin/courses">Reload</a>
        </div>
      </div>
    {{/if}}
  </div>
</div>

<style>
  @media (prefers-reduced-motion:no-preference){
    .page-enter{animation:fadeUp .45s ease-out both}
    .header-enter{animation:fadeUp .5s .03s ease-out both}
    .table-enter{animation:fadeUp .55s .05s ease-out both}
    .empty-enter{animation:fadeUp .5s ease-out both}
    .row-enter{animation:fadeIn .25s ease-in both}
  }
  @keyframes fadeUp{from{opacity:0;transform:translateY(8px)}to{opacity:1;transform:translateY(0)}}
  @keyframes fadeIn{from{opacity:0}to{opacity:1}}
  .brand-dot{width:10px;height:10px;border-radius:50%;background:linear-gradient(135deg,#6ea8fe,#2ecc71);box-shadow:0 0 0 3px rgba(110,168,254,.15)}
  .btn-glow{position:relative;transition:transform .12s ease}
  .btn-glow:hover{transform:translateY(-1px)}
  .btn-glow::after{content:"";position:absolute;inset:-2px;border-radius:.6rem;background:radial-gradient(120px 60px at var(--x,50%) 120%,rgba(255,255,255,.25),transparent 60%);opacity:0;transition:opacity .2s ease;pointer-events:none}
  .btn-glow:hover::after{opacity:1}
  .table thead th{position:sticky;top:-1px;background:var(--bs-light);z-index:2}
  .table tbody tr:hover{background:rgba(13,110,253,.04);box-shadow:inset 0 0 0 9999px rgba(13,110,253,.03)}
</style>
<script>
  // pointer glow
  document.addEventListener('pointermove', e=>{
    document.querySelectorAll('.btn-glow').forEach(b=>{
      const r=b.getBoundingClientRect();
      b.style.setProperty('--x', `${((e.clientX-r.left)/r.width)*100}%`);
    });
  });
  // tooltips
  document.querySelectorAll('[data-bs-toggle="tooltip"]').forEach(el=>new bootstrap.Tooltip(el));
</script>
