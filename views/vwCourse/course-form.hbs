<div class="container py-4">
  <h3 class="mb-3">{{#if course}}Edit Course{{else}}New Course{{/if}}</h3>

  <form method="post" action="{{action}}" enctype="multipart/form-data">
    <div class="mb-3">
      <label class="form-label">Title</label>
      <input name="title" class="form-control" value="{{course.title}}" required>
    </div>

    <div class="mb-3">
      <label class="form-label">Category</label>
      <select name="cat_id" class="form-select" required>
        <option value="">-- Choose category --</option>
        {{#each categories}}
          <option value="{{this.id}}" {{#ifeq this.id ../course.cat_id}}selected{{/ifeq}}>{{this.name}}</option>
        {{/each}}
      </select>
    </div>

    <div class="row mb-3">
      <div class="col-md-6">
        <label class="form-label">Price</label>
        <input type="number" step="0.01" name="price" class="form-control" value="{{course.price}}">
      </div>
      <div class="col-md-6">
        <label class="form-label">Promo Price</label>
        <input type="number" step="0.01" name="promo_price" class="form-control" value="{{course.promo_price}}">
      </div>
    </div>

    <div class="mb-3">
      <label class="form-label">Short Description</label>
      <textarea name="short_desc" rows="2" class="form-control">{{course.short_desc}}</textarea>
    </div>

    <div class="mb-3">
      <label class="form-label">Detailed Description</label>
      <textarea id="editor" name="long_desc_html">{{{course.long_desc_html}}}</textarea>
    </div>

    <div class="mb-3">
      <label class="form-label">Thumbnail</label>
      <input type="file" name="thumbnail" accept="image/*" class="form-control">
      {{#if course.cover_url}}
        <img src="{{course.cover_url}}" class="mt-2 rounded" style="max-height:120px;">
      {{/if}}
    </div>

    <button class="btn btn-success">Save</button>
    <a href="/instructor/my-courses" class="btn btn-outline-secondary">Cancel</a>
  </form>
</div>

<script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
<script>
  tinymce.init({
    selector: '#editor',
    height: 420,
    plugins: 'link lists code table',
    toolbar: 'undo redo | styles | bold italic underline | bullist numlist | link table | code',
  });
</script>
