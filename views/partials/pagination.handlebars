
{{#if totalPages}}
<nav aria-label="Page navigation" class="mt-3">
  <ul class="pagination justify-content-center mb-0">
    {{#if hasPrev}}
      <li class="page-item">
        <a class="page-link" href="?page={{prev}}{{#if q}}&q={{encodeURIComponent q}}{{/if}}">Previous</a>
      </li>
    {{/if}}

    {{#each pages}}
      <li class="page-item {{#if this.active}}active{{/if}}">
        <a class="page-link" href="?page={{this.num}}{{#if ../q}}&q={{encodeURIComponent ../q}}{{/if}}">
          {{this.num}}
        </a>
      </li>
    {{/each}}

    {{#if hasNext}}
      <li class="page-item">
        <a class="page-link" href="?page={{next}}{{#if q}}&q={{encodeURIComponent q}}{{/if}}">Next</a>
      </li>
    {{/if}}
  </ul>
</nav>
{{/if}}
