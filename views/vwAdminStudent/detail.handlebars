<div class="row">
  <div class="col-3">
    {{> sidebar}}
  </div>

  <div class="col-9">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h3 class="mb-0">Student Detail</h3>
      <a href="/admin/students" class="btn btn-outline-secondary">Back</a>
    </div>

    <div class="card mb-3">
      <div class="card-body">
        <div class="h5 mb-1">{{student.name}}</div>
        <div class="text-muted">{{student.email}}</div>
      </div>
      <div class="card-footer small text-muted">
        Joined: {{formatDate student.created_at}}
      </div>
    </div>

    <h5 class="mb-2">Recent Enrollments</h5>
    {{#if enrolls.length}}
      <div class="table-responsive">
        <table class="table table-hover align-middle">
          <thead class="table-light">
            <tr>
              <th style="width:72px">#</th>
              <th>Course</th>
              <th>Category</th>
              <th>Instructor</th>
              <th>Purchased</th>
            </tr>
          </thead>
          <tbody>
            {{#each enrolls}}
              <tr>
                <td>{{inc @index}}</td>
                <td>
                  <a href="/courses/{{this.course_id}}" target="_blank">{{this.course_title}}</a>
                </td>
                <td>{{#if this.category}}{{this.category}}{{else}}—{{/if}}</td>
                <td>{{#if this.instructor}}{{this.instructor}}{{else}}—{{/if}}</td>
                <td>{{formatDate this.purchased_at}}</td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    {{else}}
      <div class="alert alert-info">No enrollments yet.</div>
    {{/if}}
  </div>
</div>
