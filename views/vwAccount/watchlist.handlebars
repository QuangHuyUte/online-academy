<div class="container py-5">

    <!-- ü©∑ Ti√™u ƒë·ªÅ -->
    <div class="d-flex align-items-center mb-4">
    <i class="bi bi-heart-fill text-danger fs-3 me-2"></i>
    <h2 class="fw-bold text-primary mb-0">Favorite Courses</h2>
    </div>

    {{#if hasCourses}}
    <!-- üß© Grid hi·ªÉn th·ªã c√°c kh√≥a h·ªçc -->
    <div id="watchlistGrid" class="row row-cols-1 row-cols-md-3 g-4">
        {{#each watchlist}}
        <div class="col" data-course-id="{{id}}">
            <div class="card h-100 shadow-sm border-0 hover-shadow">

                <!-- ·∫¢nh kh√≥a h·ªçc -->
                <img src="{{cover_url}}" class="card-img-top" alt="{{title}}"
                    style="height: 180px; object-fit: cover; border-top-left-radius: .5rem; border-top-right-radius: .5rem;">

                <div class="card-body d-flex flex-column">
                    <h6 class="fw-bold text-truncate mb-2">
                        <a href="/courses/details?id={{id}}" class="text-dark text-decoration-none">{{title}}</a>
                    </h6>

                    <p class="text-warning mb-2">
                        ‚òÖ {{rating_avg}}
                        <small class="text-muted">({{rating_count}} reviews)</small>
                    </p>

                    <div class="mt-auto d-flex justify-content-between align-items-center">
                        {{#if promo_price}}
                        <span class="fw-bold text-danger">${{promo_price}}</span>
                        <small class="text-decoration-line-through text-secondary">${{price}}</small>
                        {{else}}
                        <span class="fw-bold text-dark">${{price}}</span>
                        {{/if}}
                    </div>
                </div>

                <!-- Footer -->
                <div class="card-footer bg-white border-top-0 d-flex justify-content-between">
                    <a href="/courses/details?id={{id}}" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-eye"></i> View details
                    </a>
                    <button class="btn btn-outline-danger btn-sm btn-remove-watchlist">
                        <i class="bi bi-trash"></i> Remove
                    </button>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

    {{else}}
    <!-- ‚ùå Khi ch∆∞a c√≥ kh√≥a h·ªçc -->
    <div id="emptyMessage" class="text-center py-5">
        <i class="bi bi-heart text-danger fs-1 mb-3"></i>
        <h5 class="fw-bold text-secondary">You have not added any courses to your favorites.</h5>
        <a href="/courses" class="btn btn-primary mt-3">
            <i class="bi bi-search"></i> Explore courses
        </a>
    </div>
    {{/if}}
</div>

<style>
    .hover-shadow:hover {
        transform: translateY(-4px);
        transition: all 0.2s ease-in-out;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        document.querySelectorAll('.btn-remove-watchlist').forEach(btn => {
            btn.addEventListener('click', async (e) => {
                e.preventDefault();
                const card = btn.closest('.col');
                const courseId = card.dataset.courseId;
                const confirmed = confirm('Are you sure you want to remove this course from your favorites?');
                if (!confirmed) return;

                try {
                    const res = await fetch('/courses/watchlist/remove', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ course_id: courseId })
                    });

                    const result = await res.json();

                    if (res.status === 401) {
                        alert(result.message || 'You need to sign in to remove.');
                        return (window.location.href = '/account/signin');
                    }

                        if (result.success) {
                        card.remove();

                        // N·∫øu xo√° h·∫øt
                        if (document.querySelectorAll('.col').length === 0) {
                            document.getElementById('watchlistGrid')?.remove();
                            document.querySelector('.container').insertAdjacentHTML('beforeend', `
              <div id="emptyMessage" class="text-center py-5">
                <i class="bi bi-heart text-danger fs-1 mb-3"></i>
                <h5 class="fw-bold text-secondary">You haven't added any courses to your favorites list.</h5>
                <a href="/courses" class="btn btn-primary mt-3">
                  <i class="bi bi-search"></i> Explore the course
                </a>
              </div>`);
                        }
                    } else {
                        alert(result.message || 'Error removing from favorites.');
                    }
                } catch (err) {
                    console.error('‚ùå Error removing from watchlist:', err);
                    alert('Cannot connect to server.');
                }
            });
        });
    });
</script>