<div class="col-md-3 mb-4">
  <a href="/courses/{{id}}" class="course-card-link text-decoration-none text-reset">
    <div class="card h-100 shadow-sm card-hover">
      <img src="{{image}}" class="card-img-top grid-fixed-img" alt="{{title}}">
      <div class="card-body">
        <h6 class="card-title">{{title}}</h6>
        <p class="text-muted mb-1">{{category_name}}</p>
        <p class="small">👨‍🏫 {{teacher_name}}</p>
        <p>⭐ {{rating}} ({{rating_count}} đánh giá)</p>
        {{#if promo_price}}
          <p><span class="text-danger fw-bold">{{promo_price}}đ</span> <del>{{price}}đ</del></p>
        {{else}}
          <p class="fw-bold">{{price}}đ</p>
        {{/if}}
      </div>
    </div>
  </a>
</div>
